#!/bin/sh
# prerm script for blockcontrol
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    remove|upgrade|deconfigure)
    ;;
    failed-upgrade)
        if [ "$2" = 1.4-1~pre5~jaunty ] && [ ! -f /etc/blockcontrol/iptables-custom-remove.sh ] ; then
            touch /etc/blockcontrol/iptables-custom-remove.sh
        fi
        # Ubuntu hardy and intrepid have broken LSB init-functions, so use the internal ones.
        # This is necessary since version 1.5. Since version 1.6.5-1 the internal ones are always used for hardy/intrepid.
        if dpkg --compare-versions "$2" ge 1.5 && dpkg --compare-versions "$2" lt 1.6.5-1 ; then
            sed -i -r "s|^LSB=.*|LSB=\"\"|" /usr/lib/blockcontrol/blockcontrol.defaults
        fi
        if dpkg --compare-versions "$2" ge 1.5 && dpkg --compare-versions "$2" lt 1.6.7 ; then
            blockcontrol stop || \
                [ "$?" = 1 ] && rm -f /var/run/moblock.pid
        fi
    ;;
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
