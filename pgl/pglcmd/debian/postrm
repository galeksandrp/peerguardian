#!/bin/sh
# postrm script for pglcmd
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

# Source debconf library.
. /usr/share/debconf/confmodule

case "$1" in
	purge)
		[ ! -d /var/spool/pglcmd ] || { echo -n "Removing /var/spool/pglcmd and its contents" ; rm -rf /var/spool/pglcmd ; echo "." ; }
		LISTS="guarding.p2p guarding.p2p.backup guarding.p2b guarding.p2b.backup ipfilter.dat ipfilter.dat.backup"
		for LIST in $LISTS ; do
			[ ! -f /var/lib/pglcmd/$LIST ] || { echo -n "Removing /var/lib/pglcmd/$LIST" ; rm /var/lib/pglcmd/$LIST && echo "." ; }
		done
		# User/mobloquer might have changed frequency from daily:
		[ ! -e /etc/cron.*/pglcmd ] || \
			rm /etc/cron.*/pglcmd
		# The _back files are created by mobloquer.
		for FILE in pglcmd.conf_back blocklists.list_back iptables-custom-insert.sh iptables-custom-remove.sh ; do
			[ ! -f /etc/pglcmd/$FILE ] || { echo -n "Removing /etc/pglcmd/$FILE" ; rm /etc/pglcmd/$FILE && echo "." ; }
		done
		;;
	remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
		;;
	*)
		echo "postrm called with unknown argument \"$1\"" >&2
		exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
