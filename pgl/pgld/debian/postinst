#!/bin/sh -e

if test "$1" = "configure"; then
    ENABLED=0

    test -f /etc/default/nfblock && . /etc/default/nfblock

    if [ "$ENABLED" = "0" ]; then
        exit 0
    fi

    mkdir -p /var/lib/nfblock

    if [ -n "$BLOCKLISTPRO_NAMES" ] ; then
        /usr/lib/nfblock/dl-blocklistpro.pl $BLOCKLISTPRO_NAMES
    fi
fi

#DEBHELPER#

exit 0
