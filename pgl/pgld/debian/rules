#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

package := pgld
prefix := $(shell pwd)/debian/$(package)

CFLAGS = -g -Wall
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
CFLAGS += -O0
else
CFLAGS += -O2
endif


build: build-stamp

build-stamp:
	dh_testdir
	ln logrotate debian/logrotate

	# Add here commands to compile the package.
	$(MAKE) prefix=/usr DBUSCONFDIR=/etc/dbus-1/system.d

	touch build-stamp


clean:
	dh_testdir
	dh_testroot
	find debian -maxdepth 1 -regextype posix-extended -regex "(.*logrotate)" -print0 | xargs -0r rm
	rm -f build-stamp

	# Add here commands to clean up after the build process.
	$(MAKE) clean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# Add here commands to install the package into debian/pgl.
	$(MAKE) install prefix=$(prefix)/usr DBUSCONFDIR=$(prefix)/etc/dbus-1/system.d


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs README
	dh_installlogrotate
# 	dh_installinit -- start 20 2 3 4 5 . start 39 S . stop 80 0 1 6 .
# 	dh_installcron
	dh_installchangelogs ChangeLog
	dh_link
	dh_strip --dbg-package=pgld-dbg
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
