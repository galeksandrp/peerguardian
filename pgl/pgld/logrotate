/var/log/pgl/pgld.log {
    rotate 12
    daily
    compress
    delaycompress
    missingok
    notifempty
    prerotate
                test ! -e /var/run/pgld.pid || /usr/bin/pglcmd email_stats
    endscript
    postrotate
                test ! -e /var/run/pgld.pid || /usr/bin/pglcmd reload
    endscript
}
