/var/log/pgl/pgld.log {
    rotate 12
    daily
    compress
    delaycompress
    missingok
    notifempty
    prerotate
        # If pgld pidfile exists and pglcmd is installed, send statistics per mail.
        [ ! -e /var/run/pgld.pid ] || { [ ! -x /usr/bin/pglcmd ] || /usr/bin/pglcmd email_stats ; }
    endscript
    postrotate
        # Reload pgld to reopen the logfile
        [ ! -e /var/run/pgld.pid ] || kill -s HUP `cat /var/run/pgld.pid`
    endscript
}
