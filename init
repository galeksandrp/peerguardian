### BEGIN INIT INFO
# Provides:          moblock
# Required-Start:    $local_fs $remote_fs $syslog
# Required-Stop:     $local_fs $remote_fs $syslog
# Should-Start:      firehol firestarter
# Should-Stop:       firehol firestarter
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: IP block daemon initscript
# Description:       An IP blocker for Linux
#	MoBlock blocks connections from/to hosts listed in a very large
#	blocklist.
#	The blocklist can be in one of the following formats: eMule 
#       "ipfilter.dat", "peerguardian .p2p text" or "peerguardian .p2b v2
#       binary".
#       This package uses the xt_NFQUEUE kernel module (available since kernel
#       >=2.6.13).
### END INIT INFO

################################################################################
# The following code is common between blockcontrol, cron.daily, if-up, init,
# and debian/postinst.
# It sets/loads the variables and functions

# This variable has to be set correctly in all just mentioned files.
# CONTROL_CONF has to be set in CONTROL_DEFAULTS.
# Everything else can then be done in blockcontrol.conf.
CONTROL_DEFAULTS="/usr/lib/blockcontrol/blockcontrol.defaults"

# Set sane configuration defaults, including the NAME of the installed daemon.
# Then load the configured values fromCONTROL_CONF and CONTROL_DEFAULT, source
# the blockcontrol.lib AND the LSB init.functions.
if [ -f "$CONTROL_DEFAULTS" ] ; then
	. $CONTROL_DEFAULTS || { echo "$0 Error: Failed to source $CONTROL_DEFAULTS although this file exists."; exit 1; }
else
	echo "$0 Error 7: Missing file $CONTROL_DEFAULTS."
	exit 7
fi

# End of the common code between blockcontrol, cron.daily, if-up, init,
# and debian/postinst.
################################################################################

test_INIT
test_VERBOSITY
test_CONTROL_SCRIPT

case "$1" in
	start)
		case "$INIT" in
			# Automatic boot is off:
			0)
				if [ "$VERBOSITY" -eq 1 ] ; then
					log_warning_msg "$DESC is configured not to start automatically at boot time."
					grep -Eq "^[:blank:]*INIT=" $CONTROL_DEFAULT && \
						log_warning_msg "To change this edit the INIT entry in $CONTROL_DEFAULT." || \
						log_warning_msg "To change this edit the INIT entry in $CONTROL_CONF."
					log_warning_msg "If you don't want to see this message set VERBOSITY=\"2\" there."
				fi
				exit 0
				;;
			# Automatic boot is on:
			1)
				$CONTROL_SCRIPT $1
				;;
		esac
		;;
	stop|restart|reload|force-reload|update|status)
		$CONTROL_SCRIPT $1
		;;
	*)
		log_warning_msg "Usage: $0 {start|stop|restart|reload|update|status}"
		exit $E_BADARGS
		;;
esac

exit $?
